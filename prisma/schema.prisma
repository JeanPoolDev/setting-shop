generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

enum Gender {
  teclado
  audifono
  memoria
  monitor
}

model Categoria {
  id   String @id @default(uuid())
  name String  @unique
  product  Producto[]
}

model Producto {
  id          String @id @default(uuid())
  title       String 
  description String
  inStock     Int
  price       Float    @default(0)
  sizes       Size[]   @default([])
  slug        String   @unique  
  tags        String[] @default([])
  gender      Gender

  category    Categoria @relation(fields: [categoryId], references: [id])
  categoryId  String 
  productoImagen ProductoImagen[]

  @@index([gender])
}

model ProductoImagen {
  id Int @id @default(autoincrement())
  url String 

  product Producto @relation(fields: [productId], references: [id])
  productId String
}