generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

enum Gender {
  teclado
  audifono
  memoria
  monitor
}

enum Role {
  admin
  user
}

model Categoria {
  id   String @id @default(uuid())
  name String  @unique
  product  Producto[]
}

model Producto {
  id          String @id @default(uuid())
  title       String 
  description String
  inStock     Int
  price       Float    @default(0)
  sizes       Size[]   @default([])
  slug        String   @unique  
  tags        String[] @default([])
  gender      Gender

  category    Categoria @relation(fields: [categoryId], references: [id])
  categoryId  String 
  productoImagen ProductoImagen[]

  @@index([gender])
}

model ProductoImagen {
  id Int @id @default(autoincrement())
  url String 

  product Producto @relation(fields: [productId], references: [id])
  productId String
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  emailVerified DateTime?
  password      String
  role          Role      @default(user)
  image         String?

  address       UserAddress?
}

model Country {
  id          String        @id
  name        String
  UserAddress UserAddress[]
}

model UserAddress {
  id         String  @id @default(uuid())
  firstName  String
  lastName   String
  address    String
  address2   String?
  postalCode String
  phone      String
  city       String

  // Relaciones
  country   Country @relation(fields: [countryId], references: [id])
  countryId String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}
